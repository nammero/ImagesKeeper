<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <title>{% block title %}Welcome to the Image Keeper!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
            <link rel="stylesheet" href="{{ asset('css/fontawesome.min.css') }}">
        {% endblock %}
    </head>
    <body class="container-fluid">
    <div class="row border-bottom">
        <nav class="navbar navbar-static-top col-md-12" role="navigation">
            <div class="navbar-header">
                <h1>Image Keeper </h1>
            </div>
            {% if app.user %}
                <a class="btn btn-dark float-right" href="{{ path('app_logout') }}"><i class="fa fa-sign-out-alt"></i>
                    Log out
                </a>
            {% else %}
                <a class="btn btn-dark float-right" href="{{ path('app_login') }}"><i class="fa fa-sign-in-alt"></i>
                    Log in
                </a>
            {% endif %}
        </nav>
    </div>
    {% block body %}{% endblock %}
    {% block javascripts %}
        <script type="text/javascript" src="{{ asset('js/bootstrap.min.js') }}"></script>
    {% endblock %}
    </body>
</html>
